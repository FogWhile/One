<!--pages/add/add.wxml-->
<view class="page">
  <view>
    <image src="{{image}}" mode="aspectFit"></image>
  </view>
  <view class="textarea-wrp">
    <textarea placeholder="请添加一张图片或输入文字" bindinput="change" style="height: 10em " name="value" value='{{content}}' />
  </view>
  <view class="btns">
    <button class="sure" bindtap="sure">确定</button>
    <button class="cancel" bindtap="cancel">取消</button>
    <button class="add" bindtap="chooseimage">添加</button>
  </view>
</view>